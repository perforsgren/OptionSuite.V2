                            </Setter>
                            <Setter TargetName="Bd" Property="BorderBrush">
                                <Setter.Value>
                                    <SolidColorBrush Color="#20FFFFFF"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>

                        <!-- Selected: cyan tint + underline -->
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="#1A2DD4BF"/>
                            <Setter TargetName="Bd" Property="BorderBrush" Value="#2DD4BF"/>
                            <Setter TargetName="ContentText" Property="Foreground" Value="#2DD4BF"/>
                        </Trigger>

                        <!-- Selected + hover: slightly stronger -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsChecked" Value="True"/>
