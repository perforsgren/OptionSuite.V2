        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Background" Value="{StaticResource NewBadgeBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource NewBadgeBorderBrush}"/>
    </Style>

    <Style x:Key="NewBadgeTextStyle" TargetType="TextBlock">
        <!-- font-size: 10.5px -->
        <Setter Property="FontSize" Value="10.5"/>
        <Setter Property="Foreground" Value="{StaticResource NewBadgeTextBrush}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- ============================================================
     GRID-SPECIFIKA ROW STYLES (olika accent-färger)
     ============================================================ -->

    <!-- OPTIONS: Cyan accent - MED margin indicator -->
    <Style x:Key="Style.BlotterDataGridRow.Options" 
       TargetType="{x:Type DataGridRow}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type DataGridRow}">
                    <Grid SnapsToDevicePixels="True">
                        <Border x:Name="RowFill" Background="Transparent" Panel.ZIndex="0"/>

                        <!-- NEW flash -->
                        <Border x:Name="FlashOverlay" Background="#592DD4BF" BorderBrush="#402DD4BF" BorderThickness="1" Opacity="0" Panel.ZIndex="1"/>

                        <!-- UPDATED flash -->
                        <Border x:Name="UpdatedOverlay" Background="#332DD4BF" Opacity="0" Panel.ZIndex="1"/>

                        <DataGridCellsPresenter Panel.ZIndex="2"/>

                        <!-- ✅ MARGIN INDICATOR: grön vänster-border -->
                        <Border x:Name="MarginAccent" 
                            Width="3" 
                            HorizontalAlignment="Left" 
                            Background="Transparent" 
                            Panel.ZIndex="2"/>

                        <Border x:Name="LeftAccent" Width="3" HorizontalAlignment="Left" Background="Transparent" Panel.ZIndex="3"/>
                        <Border x:Name="TopLine" Height="1" VerticalAlignment="Top" Background="{StaticResource Blotter.Brush.RowLine}" Opacity="0" Panel.ZIndex="4"/>
                        <Border x:Name="BottomLine" Height="1" VerticalAlignment="Bottom" Background="{StaticResource Blotter.Brush.RowLine}" Opacity="0" Panel.ZIndex="4"/>

                    </Grid>

                    <ControlTemplate.Triggers>

                        <!-- ✅ MARGIN INDICATOR: Subtil grön accent -->
                        <DataTrigger Binding="{Binding HasMargin}" Value="True">
                            <Setter TargetName="MarginAccent" Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="#10B981" Opacity="0.5"/>
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="RowFill" Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="#10B981" Opacity="0.02"/>
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>

                        <!-- IsUpdated - Wash + hairlines -->
                        <DataTrigger Binding="{Binding IsUpdated}" Value="True">
                            <DataTrigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="UpdatedOverlay" 
                                                     Storyboard.TargetProperty="Opacity" 
                                                     From="0.5" To="0.0" Duration="0:0:2.0"
                                                     EasingFunction="{StaticResource EaseOutQuad}"/>
                                        <DoubleAnimation Storyboard.TargetName="TopLine" 
                                                     Storyboard.TargetProperty="Opacity" 
                                                     From="1.0" To="0.0" Duration="0:0:2.0"
                                                     EasingFunction="{StaticResource EaseOutQuad}"/>
                                        <DoubleAnimation Storyboard.TargetName="BottomLine" 
                                                     Storyboard.TargetProperty="Opacity" 
                                                     From="1.0" To="0.0" Duration="0:0:2.0"
                                                     EasingFunction="{StaticResource EaseOutQuad}"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.EnterActions>
                        </DataTrigger>

                        <DataTrigger Binding="{Binding IsUpdated}" Value="True">
                            <Setter TargetName="UpdatedOverlay" Property="Opacity" Value="1"/>
                            <Setter TargetName="TopLine" Property="Opacity" Value="1"/>
                            <Setter TargetName="BottomLine" Property="Opacity" Value="1"/>
                            <Setter TargetName="TopLine" Property="Background" Value="#2DD4BF"/>
                            <Setter TargetName="BottomLine" Property="Background" Value="#2DD4BF"/>
                        </DataTrigger>

                        <!-- IsNew flash -->
                        <DataTrigger Binding="{Binding IsNew}" Value="True">
                            <DataTrigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="FlashOverlay" 
                                                     Storyboard.TargetProperty="Opacity" 
                                                     From="0" To="0.65" Duration="0:0:0.3"/>
                                        <DoubleAnimation Storyboard.TargetName="FlashOverlay"
                                                     Storyboard.TargetProperty="Opacity"
                                                     From="0.65" To="0" Duration="0:0:1.5"
                                                     BeginTime="0:0:1.0"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.EnterActions>
                        </DataTrigger>

                        <!-- ✅ HOVER: trumfar margin bakgrund, behåller grön border -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="RowFill" Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="#1A2DD4BF"/>
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="TopLine" Property="Opacity" Value="1"/>
                            <Setter TargetName="BottomLine" Property="Opacity" Value="1"/>
                            <Setter TargetName="LeftAccent" Property="Background" Value="#2DD4BF"/>
                            <Setter Property="Opacity" Value="1.0"/>
                        </Trigger>

                        <!-- ✅ SELECTED: trumfar allt, ersätter grön border med cyan -->
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="RowFill" Property="Background" Value="{StaticResource Blotter.Brush.RowSelectedGlass}"/>
                            <Setter TargetName="TopLine" Property="Opacity" Value="1"/>
                            <Setter TargetName="BottomLine" Property="Opacity" Value="1"/>
                            <Setter TargetName="TopLine" Property="Background" Value="{StaticResource Blotter.Brush.RowLineStrong}"/>
                            <Setter TargetName="BottomLine" Property="Background" Value="{StaticResource Blotter.Brush.RowLineStrong}"/>
                            <Setter TargetName="MarginAccent" Property="Background" Value="Transparent"/>
                            <Setter TargetName="LeftAccent" Property="Background" Value="#2DD4BF"/>
                            <Setter TargetName="FlashOverlay" Property="Opacity" Value="0"/>
                            <Setter TargetName="UpdatedOverlay" Property="Opacity" Value="0"/>
                            <Setter Property="Foreground" Value="{StaticResource Brush.Text}"/>
                        </Trigger>

                        <!-- IsSelected men inactive window -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsSelected" Value="True"/>
                                <Condition Property="Selector.IsSelectionActive" Value="False"/>
                            </MultiTrigger.Conditions>
                            <Setter Property="Foreground" Value="{StaticResource Brush.Text}"/>
                            <Setter TargetName="RowFill" Property="Background" Value="{StaticResource Blotter.Brush.RowSelectedGlass}"/>
                            <Setter TargetName="LeftAccent" Property="Background" Value="#2DD4BF"/>
                            <Setter TargetName="TopLine" Property="Opacity" Value="0.6"/>
                            <Setter TargetName="BottomLine" Property="Opacity" Value="0.6"/>
                        </MultiTrigger>
                    </ControlTemplate.Triggers>

                </ControlTemplate>

            </Setter.Value>
        </Setter>
    </Style>

    <!-- LINEAR: Purple accent - MED margin indicator -->
    <Style x:Key="Style.BlotterDataGridRow.Linear" 
       TargetType="{x:Type DataGridRow}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type DataGridRow}">
                    <Grid SnapsToDevicePixels="True">
                        <Border x:Name="RowFill" Background="Transparent" Panel.ZIndex="0"/>
                        <Border x:Name="FlashOverlay" Background="#592DD4BF" BorderBrush="#402DD4BF" BorderThickness="1" Opacity="0" Panel.ZIndex="1"/>
                        <Border x:Name="UpdatedOverlay" Background="#33A78BFA" Opacity="0" Panel.ZIndex="1"/>

                        <DataGridCellsPresenter Panel.ZIndex="2"/>

                        <!-- ✅ MARGIN INDICATOR: grön vänster-border -->
                        <Border x:Name="MarginAccent" 
                            Width="3" 
                            HorizontalAlignment="Left" 
                            Background="Transparent" 
                            Panel.ZIndex="2"/>

                        <Border x:Name="LeftAccent" Width="3" HorizontalAlignment="Left" Background="Transparent" Panel.ZIndex="3"/>
                        <Border x:Name="TopLine" Height="1" VerticalAlignment="Top" Background="{StaticResource Blotter.Brush.RowLine}" Opacity="0" Panel.ZIndex="4"/>
                        <Border x:Name="BottomLine" Height="1" VerticalAlignment="Bottom" Background="{StaticResource Blotter.Brush.RowLine}" Opacity="0" Panel.ZIndex="4"/>
                    </Grid>

                    <ControlTemplate.Triggers>

                        <!-- ✅ MARGIN INDICATOR: Subtil grön accent -->
                        <DataTrigger Binding="{Binding HasMargin}" Value="True">
                            <Setter TargetName="MarginAccent" Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="#10B981" Opacity="0.5"/>
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="RowFill" Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="#10B981" Opacity="0.02"/>
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>

                        <!-- IsUpdated - Wash + hairlines (purple) -->
                        <DataTrigger Binding="{Binding IsUpdated}" Value="True">
                            <DataTrigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="UpdatedOverlay" 
                                                     Storyboard.TargetProperty="Opacity" 
                                                     From="0.5" To="0.0" Duration="0:0:2.0"
                                                     EasingFunction="{StaticResource EaseOutQuad}"/>
                                        <DoubleAnimation Storyboard.TargetName="TopLine" 
                                                     Storyboard.TargetProperty="Opacity" 
                                                     From="1.0" To="0.0" Duration="0:0:2.0"
                                                     EasingFunction="{StaticResource EaseOutQuad}"/>
                                        <DoubleAnimation Storyboard.TargetName="BottomLine" 
                                                     Storyboard.TargetProperty="Opacity" 
                                                     From="1.0" To="0.0" Duration="0:0:2.0"
                                                     EasingFunction="{StaticResource EaseOutQuad}"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.EnterActions>
                        </DataTrigger>

                        <DataTrigger Binding="{Binding IsUpdated}" Value="True">
                            <Setter TargetName="UpdatedOverlay" Property="Opacity" Value="1"/>
                            <Setter TargetName="TopLine" Property="Opacity" Value="1"/>
                            <Setter TargetName="BottomLine" Property="Opacity" Value="1"/>
                            <Setter TargetName="TopLine" Property="Background" Value="#A78BFA"/>
                            <Setter TargetName="BottomLine" Property="Background" Value="#A78BFA"/>
                        </DataTrigger>

                        <!-- IsNew flash -->
                        <DataTrigger Binding="{Binding IsNew}" Value="True">
                            <DataTrigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="FlashOverlay" 
                                                     Storyboard.TargetProperty="Opacity" 
                                                     From="0" To="0.65" Duration="0:0:0.3"/>
                                        <DoubleAnimation Storyboard.TargetName="FlashOverlay"
                                                     Storyboard.TargetProperty="Opacity"
                                                     From="0.65" To="0" Duration="0:0:1.5"
                                                     BeginTime="0:0:1.0"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.EnterActions>
                        </DataTrigger>

                        <!-- ✅ HOVER: trumfar margin bakgrund, behåller grön border -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="RowFill" Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="#1AA78BFA"/>
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="TopLine" Property="Opacity" Value="1"/>
                            <Setter TargetName="BottomLine" Property="Opacity" Value="1"/>
                            <Setter TargetName="LeftAccent" Property="Background" Value="#A78BFA"/>
                            <Setter Property="Opacity" Value="1.0"/>
                        </Trigger>

                        <!-- ✅ SELECTED: trumfar allt, ersätter grön border med purple -->
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="RowFill" Property="Background" Value="{StaticResource Blotter.Brush.RowSelectedGlass}"/>
                            <Setter TargetName="TopLine" Property="Opacity" Value="1"/>
                            <Setter TargetName="BottomLine" Property="Opacity" Value="1"/>
                            <Setter TargetName="TopLine" Property="Background" Value="{StaticResource Blotter.Brush.RowLineStrong}"/>
                            <Setter TargetName="BottomLine" Property="Background" Value="{StaticResource Blotter.Brush.RowLineStrong}"/>
                            <Setter TargetName="MarginAccent" Property="Background" Value="Transparent"/>
                            <Setter TargetName="LeftAccent" Property="Background" Value="#A78BFA"/>
                            <Setter TargetName="FlashOverlay" Property="Opacity" Value="0"/>
                            <Setter TargetName="UpdatedOverlay" Property="Opacity" Value="0"/>
                            <Setter Property="Foreground" Value="{StaticResource Brush.Text}"/>
                        </Trigger>

                        <!-- IsSelected men inactive window -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsSelected" Value="True"/>
                                <Condition Property="Selector.IsSelectionActive" Value="False"/>
                            </MultiTrigger.Conditions>
                            <Setter Property="Foreground" Value="{StaticResource Brush.Text}"/>
                            <Setter TargetName="RowFill" Property="Background" Value="{StaticResource Blotter.Brush.RowSelectedGlass}"/>
                            <Setter TargetName="LeftAccent" Property="Background" Value="#A78BFA"/>
                            <Setter TargetName="TopLine" Property="Opacity" Value="0.6"/>
                            <Setter TargetName="BottomLine" Property="Opacity" Value="0.6"/>
                        </MultiTrigger>
                    </ControlTemplate.Triggers>

                </ControlTemplate>

            </Setter.Value>
        </Setter>
    </Style>

    <!-- =========================================================
     CONTEXT MENU STYLING
     ========================================================= -->

    <!-- Context Menu Style -->
    <Style x:Key="Style.BlotterContextMenu" TargetType="ContextMenu">
        <Setter Property="Background" Value="{StaticResource Brush.Panel}"/>
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Border}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="6"/>
        <Setter Property="HasDropShadow" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ContextMenu">
                    <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="8"
                        Padding="{TemplateBinding Padding}">
                        <StackPanel IsItemsHost="True"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- MenuItem Style -->
    <Style x:Key="Style.BlotterMenuItem" TargetType="MenuItem">
        <Setter Property="Foreground" Value="{StaticResource Brush.Text}"/>
        <Setter Property="Padding" Value="14,10"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Margin" Value="2,1"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="MenuItem">
                    <Border x:Name="Border"
                        Background="Transparent"
                        BorderThickness="0"
                        CornerRadius="5"
                        Padding="{TemplateBinding Padding}">
                        <ContentPresenter ContentSource="Header"
                                      VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <!-- Hover effect - tydlig med accent-glow -->
                        <Trigger Property="IsHighlighted" Value="True">
                            <Setter TargetName="Border" Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="#1A2DD4BF" />
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Foreground" Value="#2DD4BF"/>
                        </Trigger>
                        <!-- Disabled state - mycket mer muted -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Foreground" Value="{StaticResource Brush.TextMuted2}"/>
                            <Setter Property="Opacity" Value="0.4"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Separator Style -->
    <Style x:Key="Style.BlotterMenuSeparator" TargetType="Separator">
        <Setter Property="Background" Value="{StaticResource Brush.BorderSoft}"/>
        <Setter Property="Height" Value="1"/>
        <Setter Property="Margin" Value="10,6"/>
    </Style>

    <!-- =========================================================
     NUMERIC COLUMN STYLING
     ========================================================= -->
    <Style x:Key="Style.BlotterNumericCell" TargetType="TextBlock">
        <Setter Property="TextAlignment" Value="Right"/>
        <Setter Property="Margin" Value="0,0,12,0"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- Numeric header style - höger-alignerad text -->
    <Style x:Key="Style.BlotterDataGridHeader.Numeric" TargetType="{x:Type DataGridColumnHeader}" BasedOn="{StaticResource Style.BlotterDataGridHeader}">
        <Setter Property="HorizontalContentAlignment" Value="Right"/>
        <Setter Property="Padding" Value="10,6,12,6"/>
    </Style>

    <!-- Cell style för Booked trades -->
    <Style x:Key="Style.BlotterDataGridCell.Booked" TargetType="{x:Type DataGridCell}" BasedOn="{StaticResource Style.BlotterDataGridCell}">
        <Style.Triggers>
            <DataTrigger Binding="{Binding Status}" Value="Booked">
                <Setter Property="Opacity" Value="0.70"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <!-- Cell style för Status column - full opacity alltid -->
    <Style x:Key="Style.BlotterDataGridCell.Status" TargetType="{x:Type DataGridCell}" BasedOn="{StaticResource Style.BlotterDataGridCell}">
        <Setter Property="Opacity" Value="1.0"/>
    </Style>

    <!-- Numeric cell style - högerställd + Booked-opacity -->
    <Style x:Key="Style.BlotterDataGridCell.Numeric" TargetType="{x:Type DataGridCell}" BasedOn="{StaticResource Style.BlotterDataGridCell}">
        <Setter Property="HorizontalContentAlignment" Value="Right"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding Status}" Value="Booked">
                <Setter Property="Opacity" Value="0.70"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <!-- Toolbar separator style -->
    <Style x:Key="Style.BlotterToolbarSeparator" TargetType="{x:Type Border}">
        <Setter Property="Width" Value="1"/>
        <Setter Property="Height" Value="24"/>
        <Setter Property="Background" Value="{StaticResource Brush.BorderSoft}"/>
        <Setter Property="Margin" Value="16,0"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

</ResourceDictionary>
