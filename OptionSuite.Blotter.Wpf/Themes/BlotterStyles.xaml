<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Easing function för smooth animations -->
    <QuadraticEase x:Key="EaseOutQuad" EasingMode="EaseOut"/>

    <!-- Bool to Visibility converter -->
    <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>

    <!-- =========================
         BLOTTER: ROW STATE BRUSHES
         (endast baserat på Shell Tokens)
         ========================= -->

    <LinearGradientBrush x:Key="Blotter.Brush.RowHover" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="{StaticResource Color.Border}" Offset="0"/>
        <GradientStop Color="{StaticResource Color.BorderSoft}" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="Blotter.Brush.RowSelected" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="{StaticResource Color.AccentSoft}" Offset="0"/>
        <GradientStop Color="{StaticResource Color.Transparent}" Offset="1"/>
    </LinearGradientBrush>

    <!-- Blotter filter rail background -->
    <LinearGradientBrush x:Key="Blotter.Brush.FilterRail"
                     StartPoint="0,0"
                     EndPoint="0,1">
        <GradientStop Color="#12FFFFFF" Offset="0"/>
        <GradientStop Color="#06FFFFFF" Offset="1"/>
    </LinearGradientBrush>

    <!-- Glass / lines (token-only) -->
    <SolidColorBrush x:Key="Blotter.Brush.RowLine" Color="{StaticResource Color.BorderSoft}"/>
    <SolidColorBrush x:Key="Blotter.Brush.RowLineStrong" Color="{StaticResource Color.Border}"/>

    <!-- Glass fill for status pills / hover (token-only, använder Transparent + BorderSoft) -->
    <LinearGradientBrush x:Key="Blotter.Brush.GlassPill" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#12FFFFFF" Offset="0.0"/>
        <GradientStop Color="#06FFFFFF" Offset="1.0"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="Blotter.Brush.RowHoverGlass" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#10FFFFFF" Offset="0.0"/>
        <GradientStop Color="{StaticResource Color.Transparent}" Offset="1.0"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="Blotter.Brush.RowSelectedGlass"
                     StartPoint="0,0" EndPoint="0,1">
        <!-- Top edge: lite highlight -->
        <GradientStop Color="#25FFFFFF" Offset="0.00"/>
        <!-- Mid: mild ljus dimma (själva "glaset") -->
        <GradientStop Color="#08FFFFFF" Offset="0.55"/>
        <!-- Bottom edge: lite mörkare för separationskänsla -->
        <GradientStop Color="#2A000000" Offset="1.00"/>
    </LinearGradientBrush>

    <!-- Updated flash overlay (token-only) -->
    <LinearGradientBrush x:Key="Blotter.Brush.RowUpdatedFlash" StartPoint="0,0" EndPoint="0,1">
        <!-- Subtil highlight, ska bara "kännas" -->
        <GradientStop Color="#18FFFFFF" Offset="0.0"/>
        <GradientStop Color="#00FFFFFF" Offset="1.0"/>
    </LinearGradientBrush>



    <!-- =========================
     BLOTTER: CHROME BACKGROUNDS
     (byggt enbart av Shell tokens)
     ========================= -->

    <!-- Soft top-to-bottom chrome (motsvarar den dimmade panelkänslan i målbilden) -->
    <LinearGradientBrush x:Key="Blotter.Brush.ContentChrome"
                     StartPoint="0,0" EndPoint="0,1">
        <!-- Top: lite ljusare -->
        <GradientStop Color="#1AFFFFFF" Offset="0.0"/>
        <!-- Mid: tillbaka mot panel -->
        <GradientStop Color="{StaticResource Color.Transparent}" Offset="0.55"/>
        <!-- Bottom: lite mörkare -->
        <GradientStop Color="#14000000" Offset="1.0"/>
    </LinearGradientBrush>

    <!-- Subtle vignette (ger “soft fog” i kanterna utan nya färger) -->
    <RadialGradientBrush x:Key="Blotter.Brush.ContentVignette"
                     Center="0.5,0.35"
                     GradientOrigin="0.5,0.35"
                     RadiusX="0.85" RadiusY="0.85">
        <GradientStop Color="{StaticResource Color.Transparent}" Offset="0.0"/>
        <GradientStop Color="#1A000000" Offset="1.0"/>
    </RadialGradientBrush>

    <!-- =========================
         BLOTTER: TOOLBAR BUTTONS
         ========================= -->

    <Style x:Key="Style.BlotterToolbarButton" TargetType="{x:Type Button}">
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Foreground" Value="{StaticResource Brush.Text}"/>
        <Setter Property="Padding" Value="14,8"/>
        <Setter Property="Background" Value="{StaticResource Brush.PanelChromeTitle}"/>
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Border}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="Bd"
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="{StaticResource Radius.Button}">
                        <ContentPresenter Margin="{TemplateBinding Padding}"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                    </Border>

                    <ControlTemplate.Triggers>
                        <!-- SUBTIL hover: endast lätt glass-effekt + scale -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <!-- Endast ändra Background, INTE BorderBrush -->
                            <Setter TargetName="Bd" Property="Background">
                                <Setter.Value>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="#08FFFFFF" Offset="0.0"/>
                                        <GradientStop Color="#04FFFFFF" Offset="1.0"/>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                            <!-- TA BORT denna rad som ändrar BorderBrush -->
                            <!-- <Setter TargetName="Bd" Property="BorderBrush">... -->

                            <!-- Subtil scale på hover -->
                            <Setter TargetName="Bd" Property="RenderTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="Bd" Property="RenderTransformOrigin" Value="0.5,0.5"/>
                        </Trigger>

                        <!-- Press-effekt -->
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource Brush.Surface.Pressed}"/>
                            <Setter TargetName="Bd" Property="RenderTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="Bd" Property="RenderTransformOrigin" Value="0.5,0.5"/>
                        </Trigger>

                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.55"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Shortcut pill inne i toolbar-knappar (t.ex. Ctrl+B) -->
    <Style x:Key="Style.BlotterShortcutPill" TargetType="{x:Type Border}">
        <Setter Property="CornerRadius" Value="7"/>
        <Setter Property="BorderBrush" Value="{StaticResource Brush.BorderSoft}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Background" Value="{StaticResource Brush.PanelChromeTitle}"/>
        <Setter Property="Padding" Value="6,2"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="Style.BlotterShortcutPillText" TargetType="{x:Type TextBlock}">
        <Setter Property="FontFamily" Value="{StaticResource Font.Mono}"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="Foreground" Value="{StaticResource Brush.TextMuted}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>


    <!-- =========================================================
     BLOTTER COMBOBOX STYLE - INLINE (för DataGrid celler)
     Transparent bakgrund, samma font som övriga celler,
     pilen alltid höger-alignerad i cellen
     ========================================================= -->

    <Style x:Key="Style.BlotterComboBox" TargetType="ComboBox">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource Brush.Text}"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="MinHeight" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto"/>
        <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
        <Setter Property="ScrollViewer.CanContentScroll" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBox">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Selected content -->
                        <ContentPresenter Grid.Column="0"
                                      Content="{TemplateBinding SelectionBoxItem}"
                                      ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                      ContentStringFormat="{TemplateBinding SelectionBoxItemStringFormat}"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Left"
                                      IsHitTestVisible="False"/>

                        <!-- Dropdown arrow - alltid i höger kolumn -->
                        <Path x:Name="Arrow"
                          Grid.Column="1"
                          Data="M 0 0 L 3 3 L 6 0 Z"
                          Fill="{StaticResource Brush.TextMuted}"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          Margin="8,0,4,0"/>

                        <!-- Toggle button (invisible, covers entire area) -->
                        <ToggleButton Grid.ColumnSpan="2"
                                  IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                  Focusable="False"
                                  ClickMode="Press"
                                  Background="Transparent"
                                  BorderThickness="0"
                                  IsEnabled="{TemplateBinding IsEnabled}">
                            <ToggleButton.Template>
                                <ControlTemplate TargetType="ToggleButton">
                                    <Border Background="Transparent"/>
                                </ControlTemplate>
                            </ToggleButton.Template>
                        </ToggleButton>

                        <!-- Dropdown popup -->
                        <Popup x:Name="PART_Popup"
                           Placement="Bottom"
                           IsOpen="{TemplateBinding IsDropDownOpen}"
                           AllowsTransparency="True"
                           Focusable="False"
                           PopupAnimation="Slide">
                            <Border x:Name="DropDownBorder"
                                MinWidth="{TemplateBinding ActualWidth}"
                                MaxHeight="{TemplateBinding MaxDropDownHeight}"
                                Background="{StaticResource Brush.Panel}"
                                BorderBrush="{StaticResource Brush.Border}"
                                BorderThickness="1"
                                CornerRadius="{StaticResource Radius.Button}"
                                Margin="0,2,0,0">
                                <Border.Effect>
                                    <DropShadowEffect Color="Black" 
                                                  BlurRadius="12" 
                                                  ShadowDepth="4" 
                                                  Opacity="0.4"/>
                                </Border.Effect>
                                <ScrollViewer Margin="4">
                                    <ItemsPresenter/>
                                </ScrollViewer>
                            </Border>
                        </Popup>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Arrow" Property="Fill" Value="{StaticResource Brush.Text}"/>
                        </Trigger>
                        <Trigger Property="IsDropDownOpen" Value="True">
                            <Setter TargetName="Arrow" Property="Fill" Value="#3B82F6"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="Arrow" Property="Visibility" Value="Collapsed"/>
                            <Setter Property="Cursor" Value="Arrow"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ComboBoxItem style -->
    <Style x:Key="Style.BlotterComboBoxItem" TargetType="ComboBoxItem">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource Brush.Text}"/>
        <Setter Property="Padding" Value="10,6"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBoxItem">
                    <Border x:Name="Bd"
                        Background="{TemplateBinding Background}"
                        Padding="{TemplateBinding Padding}"
                        CornerRadius="4">
                        <ContentPresenter VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsHighlighted" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="#1A3B82F6"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="#333B82F6"/>
                            <Setter Property="Foreground" Value="#3B82F6"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <!-- =========================
         BLOTTER: SEGMENTED STRIP
         ========================= -->

    <!-- Segmented strip: label + pill ska bete sig som målbild -->
    <Style x:Key="Style.BlotterStripToggle" TargetType="{x:Type RadioButton}">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{StaticResource Brush.TextMuted2}"/>
        <Setter Property="Padding" Value="10,7"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type RadioButton}">
                    <Border x:Name="B"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{StaticResource Radius.Button}">
                        <ContentPresenter Margin="{TemplateBinding Padding}"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="B" Property="Background">
                                <Setter.Value>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="#08FFFFFF" Offset="0.0"/>
                                        <GradientStop Color="#04FFFFFF" Offset="1.0"/>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="B" Property="BorderBrush">
                                <Setter.Value>
                                    <SolidColorBrush Color="#20FFFFFF"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>

                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="B" Property="Background" Value="#1A2DD4BF"/>
                            <Setter TargetName="B" Property="BorderBrush" Value="#2DD4BF"/>
                            <Setter Property="Foreground" Value="#2DD4BF"/>
                        </Trigger>

                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsChecked" Value="True"/>
                                <Condition Property="IsMouseOver" Value="True"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="B" Property="Background" Value="#262DD4BF"/>
                            <Setter TargetName="B" Property="BorderBrush" Value="#2DD4BF"/>
                        </MultiTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <!-- Count pill: stateful via binding till närmaste RadioButton -->
    <Style x:Key="Style.BlotterCountPill" TargetType="{x:Type Border}">
        <Setter Property="CornerRadius" Value="999"/>
        <Setter Property="Background" Value="{StaticResource Brush.PanelChromeTitle}"/>
        <Setter Property="BorderBrush" Value="{StaticResource Brush.BorderSoft}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="6,2"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding IsChecked, RelativeSource={RelativeSource AncestorType={x:Type RadioButton}}}"
                 Value="True">
                <Setter Property="Background" Value="Transparent"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="Style.BlotterCountPillText" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="Foreground" Value="{StaticResource Brush.TextMuted2}"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding IsChecked, RelativeSource={RelativeSource AncestorType={x:Type RadioButton}}}"
                 Value="True">
                <Setter Property="Foreground" Value="#2DD4BF"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>


    <!-- Label i filterstrip: ljusare när INTE selected, vit när selected -->
    <Style x:Key="Style.BlotterStripLabel" TargetType="{x:Type TextBlock}">
        <!-- INTE selected -->
        <Setter Property="Foreground" Value="{StaticResource Brush.TextMuted2}"/>
        <Setter Property="FontSize" Value="12"/>

        <Style.Triggers>
            <DataTrigger Binding="{Binding IsChecked, RelativeSource={RelativeSource AncestorType={x:Type RadioButton}}}"
                     Value="True">
                <Setter Property="Foreground" Value="{StaticResource Brush.Text}"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <!-- Quick filter checkbox style (My trades, Today, Auto-book) -->
    <Style x:Key="Style.BlotterQuickFilter" TargetType="{x:Type CheckBox}">
        <Setter Property="Foreground" Value="{StaticResource Brush.TextMuted2}"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Padding" Value="10,7"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type CheckBox}">
                    <Border x:Name="Bd"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        BorderThickness="1"
                        CornerRadius="{StaticResource Radius.Button}"
                        Padding="{TemplateBinding Padding}">
                        <ContentPresenter VerticalAlignment="Center"/>
                    </Border>

                    <ControlTemplate.Triggers>
                        <!-- Hover -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bd" Property="Background">
                                <Setter.Value>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="#08FFFFFF" Offset="0.0"/>
                                        <GradientStop Color="#04FFFFFF" Offset="1.0"/>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="Bd" Property="BorderBrush">
                                <Setter.Value>
                                    <SolidColorBrush Color="#20FFFFFF"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>

                        <!-- Checked -->
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="#1A2DD4BF"/>
                            <Setter TargetName="Bd" Property="BorderBrush" Value="#2DD4BF"/>
                            <Setter Property="Foreground" Value="#2DD4BF"/>
                        </Trigger>

                        <!-- Checked + Hover -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsChecked" Value="True"/>
                                <Condition Property="IsMouseOver" Value="True"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="Bd" Property="Background" Value="#262DD4BF"/>
                        </MultiTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- =========================
         BLOTTER: DATAGRID BASE
         ========================= -->

    <Style x:Key="Style.BlotterDataGrid" TargetType="{x:Type DataGrid}">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{StaticResource Brush.Text}"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="HeadersVisibility" Value="Column"/>
        <Setter Property="RowHeaderWidth" Value="0"/>
        <Setter Property="GridLinesVisibility" Value="None"/>
        <Setter Property="CanUserAddRows" Value="False"/>
        <Setter Property="CanUserDeleteRows" Value="False"/>
        <Setter Property="CanUserReorderColumns" Value="False"/>
        <Setter Property="CanUserResizeRows" Value="False"/>
        <Setter Property="SelectionMode" Value="Single"/>
        <Setter Property="SelectionUnit" Value="FullRow"/>
        <Setter Property="EnableRowVirtualization" Value="True"/>
        <Setter Property="EnableColumnVirtualization" Value="True"/>
        <Setter Property="ScrollViewer.CanContentScroll" Value="True"/>
        <Setter Property="RowHeight" Value="34"/>
        <Setter Property="ColumnHeaderHeight" Value="32"/>
    </Style>

    <!-- UPPDATERAD: Starkare column header -->
    <Style x:Key="Style.BlotterDataGridHeader" TargetType="{x:Type DataGridColumnHeader}">
        <Setter Property="Foreground" Value="{StaticResource Brush.TextMuted2}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Padding" Value="10,6"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>

        <Setter Property="Background">
            <Setter.Value>
                <!-- Lite ljusare för att särskilja från content -->
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#25FFFFFF" Offset="0.0"/>
                    <GradientStop Color="#12FFFFFF" Offset="0.5"/>
                    <GradientStop Color="#08FFFFFF" Offset="1.0"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type DataGridColumnHeader}">
                    <Grid SnapsToDevicePixels="True">
                        <Border Background="{TemplateBinding Background}"
                            Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                          SnapsToDevicePixels="True"/>
                        </Border>

                        <!-- STARKARE bottom line med accent-färg -->
                        <Border Height="2"
                            VerticalAlignment="Bottom"
                            Background="{StaticResource Brush.Accent}"
                            Opacity="0.35"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <!-- NYA: Section header style - BASE -->
    <Style x:Key="Style.BlotterSectionHeader" TargetType="{x:Type Border}">
        <Setter Property="Background" Value="{StaticResource Blotter.Brush.ContentChrome}"/>
        <Setter Property="BorderBrush" Value="{StaticResource Brush.AccentSoft}"/>
        <Setter Property="BorderThickness" Value="3,0,0,1"/>
        <Setter Property="Padding" Value="14,10"/>
    </Style>

    <!-- Options section header - CYAN accent -->
    <Style x:Key="Style.BlotterSectionHeader.Options" TargetType="{x:Type Border}" BasedOn="{StaticResource Style.BlotterSectionHeader}">
        <Setter Property="BorderBrush">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#2DD4BF" Offset="0.0"/>
                    <GradientStop Color="{StaticResource Color.AccentSoft}" Offset="0.01"/>
                    <GradientStop Color="{StaticResource Color.AccentSoft}" Offset="1.0"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Linear section header - PURPLE accent -->
    <Style x:Key="Style.BlotterSectionHeader.Linear" TargetType="{x:Type Border}" BasedOn="{StaticResource Style.BlotterSectionHeader}">
        <Setter Property="BorderBrush">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#A78BFA" Offset="0.0"/>
                    <GradientStop Color="{StaticResource Color.AccentSoft}" Offset="0.01"/>
                    <GradientStop Color="{StaticResource Color.AccentSoft}" Offset="1.0"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="Style.BlotterSectionHeaderText" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource Brush.Text}"/>
        <Setter Property="Opacity" Value="0.9"/>
    </Style>

    <!-- Status pill template -->
    <DataTemplate x:Key="Template.StatusPill">
        <Border x:Name="StatusPill"
            Background="{StaticResource Blotter.Brush.GlassPill}"
            BorderBrush="{StaticResource Brush.BorderSoft}"
            BorderThickness="1"
            CornerRadius="12"
            Padding="10,4"
            HorizontalAlignment="Left">
            <TextBlock Text="{Binding Status}"
                   FontSize="11"
                   FontWeight="SemiBold"
                   Foreground="{StaticResource Brush.Text}"/>
        </Border>

        <DataTemplate.Triggers>
            <!-- New = Cyan -->
            <DataTrigger Binding="{Binding Status}" Value="New">
                <Setter TargetName="StatusPill" Property="Background" Value="#1A2DD4BF"/>
                <Setter TargetName="StatusPill" Property="BorderBrush" Value="#402DD4BF"/>
            </DataTrigger>

            <!-- Pending = Yellow -->
            <DataTrigger Binding="{Binding Status}" Value="Pending">
                <Setter TargetName="StatusPill" Property="Background" Value="#1AFBBF24"/>
                <Setter TargetName="StatusPill" Property="BorderBrush" Value="#40FBBF24"/>
            </DataTrigger>

            <!-- Booked = Green -->
            <DataTrigger Binding="{Binding Status}" Value="Booked">
                <Setter TargetName="StatusPill" Property="Background" Value="#1A10B981"/>
                <Setter TargetName="StatusPill" Property="BorderBrush" Value="#4010B981"/>
            </DataTrigger>

            <!-- Error/Rejected = Red -->
            <DataTrigger Binding="{Binding Status}" Value="Error">
                <Setter TargetName="StatusPill" Property="Background" Value="#1AEF4444"/>
                <Setter TargetName="StatusPill" Property="BorderBrush" Value="#40EF4444"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding Status}" Value="Rejected">
                <Setter TargetName="StatusPill" Property="Background" Value="#1AEF4444"/>
                <Setter TargetName="StatusPill" Property="BorderBrush" Value="#40EF4444"/>
            </DataTrigger>
        </DataTemplate.Triggers>
    </DataTemplate>




    <Style x:Key="Style.BlotterDataGridCell" TargetType="{x:Type DataGridCell}">
        <Setter Property="Padding" Value="10,0"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
        <Setter Property="BorderBrush" Value="{StaticResource Brush.BorderSoft}"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource Brush.Text}"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type DataGridCell}">
                    <Border x:Name="CellBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            SnapsToDevicePixels="True">
                        <ContentPresenter Margin="{TemplateBinding Padding}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="CellBorder" Property="Background" Value="Transparent"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="Style.BlotterDataGridRow" TargetType="{x:Type DataGridRow}">
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Foreground" Value="{StaticResource Brush.Text}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type DataGridRow}">
                    <Grid>
                        <!-- Base fill -->
                        <Border x:Name="RowFill" Background="Transparent"/>

                        <!-- NEW flash overlay (finns redan i din baseline) -->
                        <Border x:Name="FlashOverlay"
                            Background="{StaticResource Brush.Good}"
                            Opacity="0"/>

                        <!-- UPDATED flash overlay (NY) -->
                        <Border x:Name="UpdatedOverlay"
                            Background="{StaticResource Brush.AccentSoft}"
                            Opacity="0"/>

                        <!-- Top/bottom hairlines (off by default) -->
                        <Border x:Name="TopLine"
                            Height="1"
                            VerticalAlignment="Top"
                            Background="{StaticResource Blotter.Brush.RowLine}"
                            Opacity="0"/>
                        <Border x:Name="BottomLine"
                            Height="1"
                            VerticalAlignment="Bottom"
                            Background="{StaticResource Blotter.Brush.RowLine}"
                            Opacity="0"/>

                        <!-- Left accent -->
                        <Border x:Name="LeftAccent"
                            Width="3"
                            HorizontalAlignment="Left"
                            Background="Transparent"/>

                        <DataGridCellsPresenter/>
                    </Grid>

                    <ControlTemplate.Triggers>

                        <!-- Hover -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="RowFill" Property="Background" Value="{StaticResource Blotter.Brush.RowHoverGlass}"/>
                            <Setter TargetName="TopLine" Property="Opacity" Value="1"/>
                            <Setter TargetName="BottomLine" Property="Opacity" Value="1"/>
                            <Setter TargetName="LeftAccent" Property="Background" Value="{StaticResource Brush.AccentSoft}"/>
                        </Trigger>

                        <!-- UPDATED -->
                        <DataTrigger Binding="{Binding IsUpdated}" Value="True">
                            <Setter TargetName="UpdatedOverlay" Property="Opacity" Value="0.22"/>
                            <Setter TargetName="TopLine" Property="Opacity" Value="1"/>
                            <Setter TargetName="BottomLine" Property="Opacity" Value="1"/>
                            <Setter TargetName="TopLine" Property="Background" Value="{StaticResource Brush.AccentSoft}"/>
                            <Setter TargetName="BottomLine" Property="Background" Value="{StaticResource Brush.AccentSoft}"/>
                        </DataTrigger>

                        <!-- Selected (ska vinna över flash/updated) -->
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="RowFill" Property="Background" Value="{StaticResource Blotter.Brush.RowSelectedGlass}"/>
                            <Setter TargetName="TopLine" Property="Opacity" Value="1"/>
                            <Setter TargetName="BottomLine" Property="Opacity" Value="1"/>
                            <Setter TargetName="TopLine" Property="Background" Value="{StaticResource Blotter.Brush.RowLineStrong}"/>
                            <Setter TargetName="BottomLine" Property="Background" Value="{StaticResource Blotter.Brush.RowLineStrong}"/>
                            <Setter TargetName="LeftAccent" Property="Background" Value="{StaticResource Brush.Accent}"/>
                            <Setter TargetName="FlashOverlay" Property="Opacity" Value="0"/>
                            <Setter TargetName="UpdatedOverlay" Property="Opacity" Value="0"/>
                            <Setter Property="Foreground" Value="{StaticResource Brush.Text}"/>
                        </Trigger>

                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>




