                            <TextBlock x:Name="ContentText"
                                Text="{TemplateBinding Content}"
                                Margin="{TemplateBinding Padding}"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                Foreground="{StaticResource Brush.TextMuted2}"/>
