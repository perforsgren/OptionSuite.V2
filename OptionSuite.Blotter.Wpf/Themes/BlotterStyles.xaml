                            </MultiTrigger.Conditions>
                            <Setter TargetName="Bd" Property="Background" Value="#262DD4BF"/>
                            <Setter TargetName="Bd" Property="BorderBrush" Value="#2DD4BF"/>
                        </MultiTrigger>

