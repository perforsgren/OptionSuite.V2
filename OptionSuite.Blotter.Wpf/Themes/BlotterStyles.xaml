                    </Grid>

                    <ControlTemplate.Triggers>

                        <!-- Hover (unselected): very subtle glass -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bd" Property="Background">
                                <Setter.Value>
