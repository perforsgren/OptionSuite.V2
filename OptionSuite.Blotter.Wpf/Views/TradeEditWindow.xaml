<Window x:Class="OptionSuite.Blotter.Wpf.Views.TradeEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding WindowTitle}"
        Width="620"
        Height="680"
        MinWidth="550"
        MinHeight="500"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource Brush.Panel}"
        ResizeMode="CanResize">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <!-- Compact form field label -->
        <Style x:Key="Style.FormLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="{StaticResource Brush.TextMuted}"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>

        <!-- Compact TextBox -->
        <Style x:Key="Style.FormTextBox" TargetType="TextBox">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{StaticResource Brush.Text}"/>
            <Setter Property="Background" Value="{StaticResource Brush.Panel2}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Brush.Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="CaretBrush" Value="{StaticResource Brush.Text}"/>
            <Style.Triggers>
                <Trigger Property="IsReadOnly" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <SolidColorBrush Color="#08FFFFFF"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Setter Property="Foreground" Value="{StaticResource Brush.TextMuted}"/>
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#2DD4BF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Styled ComboBox -->
        <Style x:Key="Style.FormComboBox" TargetType="ComboBox">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{StaticResource Brush.Text}"/>
            <Setter Property="Background" Value="{StaticResource Brush.Panel2}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Brush.Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="Border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="4">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <ContentPresenter Grid.Column="0"
                                                      Content="{TemplateBinding SelectionBoxItem}"
                                                      ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                      Margin="{TemplateBinding Padding}"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Left"/>

                                    <Path Grid.Column="1"
                                          x:Name="Arrow"
                                          Data="M 0 0 L 4 4 L 8 0 Z"
                                          Fill="{StaticResource Brush.TextMuted}"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Margin="0,0,10,0"/>
                                </Grid>
                            </Border>

                            <ToggleButton Grid.ColumnSpan="2"
                                          IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          Focusable="False"
                                          ClickMode="Press"
                                          Background="Transparent"
                                          BorderThickness="0">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Background="Transparent"/>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>

                            <Popup x:Name="PART_Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Slide">
                                <Border MinWidth="{TemplateBinding ActualWidth}"
                                        MaxHeight="200"
                                        Background="{StaticResource Brush.Panel}"
                                        BorderBrush="{StaticResource Brush.Border}"
                                        BorderThickness="1"
                                        CornerRadius="4"
                                        Margin="0,2,0,0">
                                    <Border.Effect>
                                        <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="2" Opacity="0.3"/>
                                    </Border.Effect>
                                    <ScrollViewer Margin="4" VerticalScrollBarVisibility="Auto">
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource Brush.TextMuted}"/>
                                <Setter TargetName="Arrow" Property="Fill" Value="{StaticResource Brush.Text}"/>
                            </Trigger>
                            <Trigger Property="IsDropDownOpen" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#2DD4BF"/>
                                <Setter TargetName="Arrow" Property="Fill" Value="#2DD4BF"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBoxItem style -->
        <Style x:Key="Style.FormComboBoxItem" TargetType="ComboBoxItem">
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="Bd" Background="Transparent" Padding="{TemplateBinding Padding}" CornerRadius="3">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#1A2DD4BF"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#332DD4BF"/>
                                <Setter Property="Foreground" Value="#2DD4BF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Expander Section Header -->
        <Style x:Key="Style.SectionExpander" TargetType="Expander">
            <Setter Property="IsExpanded" Value="True"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Expander">
                        <Border Background="Transparent">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- Header -->
                                <ToggleButton Grid.Row="0" 
                                              IsChecked="{Binding IsExpanded, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                              Cursor="Hand">
                                    <ToggleButton.Template>
                                        <ControlTemplate TargetType="ToggleButton">
                                            <Border x:Name="HeaderBorder"
                                                    Background="#0AFFFFFF"
                                                    BorderBrush="#2DD4BF"
                                                    BorderThickness="3,0,0,0"
                                                    Padding="10,6">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <ContentPresenter Grid.Column="0" 
                                                                      Content="{TemplateBinding Content}"
                                                                      VerticalAlignment="Center"/>

                                                    <Path x:Name="Arrow" 
                                                          Grid.Column="1"
                                                          Data="M 0 0 L 4 4 L 8 0 Z"
                                                          Fill="{StaticResource Brush.TextMuted}"
                                                          VerticalAlignment="Center"
                                                          Margin="8,0,4,0"
                                                          RenderTransformOrigin="0.5,0.5">
                                                        <Path.RenderTransform>
                                                            <RotateTransform Angle="0"/>
                                                        </Path.RenderTransform>
                                                    </Path>
                                                </Grid>
                                            </Border>

                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter TargetName="Arrow" Property="RenderTransform">
                                                        <Setter.Value>
                                                            <RotateTransform Angle="180"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="HeaderBorder" Property="Background" Value="#12FFFFFF"/>
                                                    <Setter TargetName="Arrow" Property="Fill" Value="#2DD4BF"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </ToggleButton.Template>

                                    <TextBlock Text="{TemplateBinding Header}"
                                               FontSize="11"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource Brush.Text}"/>
                                </ToggleButton>

                                <!-- Content -->
                                <Border x:Name="ContentBorder" 
                                        Grid.Row="1" 
                                        Padding="10,8,10,4"
                                        Visibility="Visible">
                                    <ContentPresenter/>
                                </Border>
                            </Grid>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsExpanded" Value="False">
                                <Setter TargetName="ContentBorder" Property="Visibility" Value="Collapsed"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER (compact) -->
        <Border Grid.Row="0" 
                Background="{StaticResource Brush.Panel2}"
                BorderBrush="{StaticResource Brush.Border}"
                BorderThickness="0,0,0,1"
                Padding="16,12">
            <StackPanel>
                <TextBlock Text="{Binding WindowTitle}" 
                           FontSize="15" 
                           FontWeight="SemiBold"
                           Foreground="{StaticResource Brush.Text}"/>
                <TextBlock Text="{Binding WindowSubtitle}"
                           FontSize="11"
                           Foreground="{StaticResource Brush.TextMuted}"
                           Margin="0,2,0,0"/>
            </StackPanel>
        </Border>

        <!-- CONTENT -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      Padding="16,12">
            <StackPanel>

                <!-- TRADE IDENTITY -->
                <Expander Style="{StaticResource Style.SectionExpander}" Header="TRADE IDENTITY">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Trade ID" Style="{StaticResource Style.FormLabel}"/>
                            <TextBox Text="{Binding TradeId, Mode=OneWay}" Style="{StaticResource Style.FormTextBox}" IsReadOnly="True"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Status" Style="{StaticResource Style.FormLabel}"/>
                            <TextBox Text="{Binding Status, Mode=OneWay}" Style="{StaticResource Style.FormTextBox}" IsReadOnly="True"/>
                        </StackPanel>

                        <StackPanel Grid.Column="4">
                            <TextBlock Text="Product" Style="{StaticResource Style.FormLabel}"/>
                            <TextBox Text="{Binding Product, Mode=OneWay}" Style="{StaticResource Style.FormTextBox}" IsReadOnly="True"/>
                        </StackPanel>

                        <StackPanel Grid.Column="6">
                            <TextBlock Text="Trader" Style="{StaticResource Style.FormLabel}"/>
                            <TextBox Text="{Binding Trader, Mode=OneWay}" Style="{StaticResource Style.FormTextBox}" IsReadOnly="True"/>
                        </StackPanel>
                    </Grid>
                </Expander>

                <!-- COUNTERPARTY -->
                <Expander Style="{StaticResource Style.SectionExpander}" Header="COUNTERPARTY">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Counterparty Code" Style="{StaticResource Style.FormLabel}"/>
                            <TextBox Text="{Binding Counterparty, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource Style.FormTextBox}"
                                     IsReadOnly="{Binding IsReadOnly}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Broker" Style="{StaticResource Style.FormLabel}"/>
                            <TextBox Text="{Binding Broker, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource Style.FormTextBox}"
                                     IsReadOnly="{Binding IsReadOnly}"/>
                        </StackPanel>
                    </Grid>
                </Expander>

                <!-- ECONOMICS -->
                <Expander Style="{StaticResource Style.SectionExpander}" Header="ECONOMICS">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="8"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Column="0" Grid.Row="0">
                            <TextBlock Text="Currency Pair" Style="{StaticResource Style.FormLabel}"/>
                            <TextBox Text="{Binding CcyPair, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource Style.FormTextBox}"
                                     IsReadOnly="{Binding IsReadOnly}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" Grid.Row="0">
                            <TextBlock Text="Buy/Sell" Style="{StaticResource Style.FormLabel}"/>
                            <ComboBox Style="{StaticResource Style.FormComboBox}"
                                      ItemContainerStyle="{StaticResource Style.FormComboBoxItem}"
                                      SelectedItem="{Binding BuySell, Mode=TwoWay}"
                                      IsEnabled="{Binding CanEdit}">
                                <ComboBoxItem Content="Buy"/>
                                <ComboBoxItem Content="Sell"/>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Grid.Column="4" Grid.Row="0">
                            <TextBlock Text="Notional" Style="{StaticResource Style.FormLabel}"/>
                            <TextBox Text="{Binding Notional, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat=N0}" 
                                     Style="{StaticResource Style.FormTextBox}"
                                     IsReadOnly="{Binding IsReadOnly}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="0" Grid.Row="2">
                            <TextBlock Text="Notional Ccy" Style="{StaticResource Style.FormLabel}"/>
                            <TextBox Text="{Binding NotionalCcy, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource Style.FormTextBox}"
                                     IsReadOnly="{Binding IsReadOnly}"/>
                        </StackPanel>

                        <!-- Hedge Rate - endast for Linear (inte Options) -->
                        <StackPanel Grid.Column="2" Grid.Row="2" Visibility="{Binding IsLinear, Converter={StaticResource BoolToVis}}">
                            <TextBlock Text="Hedge Rate" Style="{StaticResource Style.FormLabel}"/>
                            <TextBox Text="{Binding HedgeRate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat=F6}" 
                                     Style="{StaticResource Style.FormTextBox}"
                                     IsReadOnly="{Binding IsReadOnly}"/>
                        </StackPanel>

                        <!-- Settlement Date for Linear -->
                        <StackPanel Grid.Column="4" Grid.Row="2" Visibility="{Binding IsLinear, Converter={StaticResource BoolToVis}}">
                            <TextBlock Text="Settlement Date" Style="{StaticResource Style.FormLabel}"/>
                            <TextBox Text="{Binding SettlementDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat=yyyy-MM-dd}" 
                                     Style="{StaticResource Style.FormTextBox}"
                                     IsReadOnly="{Binding IsReadOnly}"/>
                        </StackPanel>
                    </Grid>
                </Expander>

                <!-- OPTION DETAILS (only for options) -->
                <Expander Style="{StaticResource Style.SectionExpander}" 
                          Header="OPTION DETAILS"
                          Visibility="{Binding IsOption, Converter={StaticResource BoolToVis}}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="8"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Column="0" Grid.Row="0">
                            <TextBlock Text="Call/Put" Style="{StaticResource Style.FormLabel}"/>
                            <ComboBox Style="{StaticResource Style.FormComboBox}"
                                      ItemContainerStyle="{StaticResource Style.FormComboBoxItem}"
                                      SelectedItem="{Binding CallPut, Mode=TwoWay}"
                                      IsEnabled="{Binding CanEdit}">
                                <ComboBoxItem Content="Call"/>
                                <ComboBoxItem Content="Put"/>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Grid.Column="2" Grid.Row="0">
                            <TextBlock Text="Strike" Style="{StaticResource Style.FormLabel}"/>
                            <TextBox Text="{Binding Strike, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat=F4}" 
                                     Style="{StaticResource Style.FormTextBox}"
                                     IsReadOnly="{Binding IsReadOnly}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="4" Grid.Row="0">
                            <TextBlock Text="Expiry Date" Style="{StaticResource Style.FormLabel}"/>
                            <TextBox Text="{Binding ExpiryDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat=yyyy-MM-dd}" 
                                     Style="{StaticResource Style.FormTextBox}"
                                     IsReadOnly="{Binding IsReadOnly}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="0" Grid.Row="2">
                            <TextBlock Text="Settlement Date" Style="{StaticResource Style.FormLabel}"/>
                            <TextBox Text="{Binding SettlementDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat=yyyy-MM-dd}" 
                                     Style="{StaticResource Style.FormTextBox}"
                                     IsReadOnly="{Binding IsReadOnly}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" Grid.Row="2">
                            <TextBlock Text="Premium" Style="{StaticResource Style.FormLabel}"/>
                            <TextBox Text="{Binding Premium, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}" 
                                     Style="{StaticResource Style.FormTextBox}"
                                     IsReadOnly="{Binding IsReadOnly}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="4" Grid.Row="2">
                            <TextBlock Text="Premium Ccy" Style="{StaticResource Style.FormLabel}"/>
                            <TextBox Text="{Binding PremiumCcy, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource Style.FormTextBox}"
                                     IsReadOnly="{Binding IsReadOnly}"/>
                        </StackPanel>
                    </Grid>
                </Expander>

                <!-- ROUTING -->
                <Expander Style="{StaticResource Style.SectionExpander}" Header="ROUTING">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Portfolio MX3" Style="{StaticResource Style.FormLabel}"/>
                            <ComboBox Style="{StaticResource Style.FormComboBox}"
                                      ItemContainerStyle="{StaticResource Style.FormComboBoxItem}"
                                      ItemsSource="{Binding PortfolioMx3Values}"
                                      SelectedItem="{Binding PortfolioMx3, Mode=TwoWay}"
                                      IsEnabled="{Binding CanEdit}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" Visibility="{Binding IsLinear, Converter={StaticResource BoolToVis}}">
                            <TextBlock Text="Calypso Book" Style="{StaticResource Style.FormLabel}"/>
                            <ComboBox Style="{StaticResource Style.FormComboBox}"
                                      ItemContainerStyle="{StaticResource Style.FormComboBoxItem}"
                                      ItemsSource="{Binding CalypsoBookValues}"
                                      SelectedItem="{Binding CalypsoBook, Mode=TwoWay}"
                                      IsEnabled="{Binding CanEdit}"/>
                        </StackPanel>
                    </Grid>
                </Expander>

                <!-- Error message -->
                <Border Background="#1AEF4444"
                        BorderBrush="#EF4444"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="12,8"
                        Margin="0,4,0,0"
                        Visibility="{Binding HasError, Converter={StaticResource BoolToVis}}">
                    <TextBlock Text="{Binding ErrorMessage}"
                               Foreground="#EF4444"
                               FontSize="11"
                               TextWrapping="Wrap"/>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- FOOTER -->
        <Border Grid.Row="2"
                Background="{StaticResource Brush.Panel2}"
                BorderBrush="{StaticResource Brush.Border}"
                BorderThickness="0,1,0,0"
                Padding="16,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Mode indicator -->
                <Border Grid.Column="0"
                        Background="{Binding ModeBackground}"
                        BorderBrush="{Binding ModeBorderBrush}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="10,4"
                        VerticalAlignment="Center">
                    <TextBlock Text="{Binding ModeText}"
                               FontSize="10"
                               FontWeight="SemiBold"
                               Foreground="{Binding ModeForeground}"/>
                </Border>

                <!-- Cancel -->
                <Button Grid.Column="2"
                        Content="Cancel"
                        Command="{Binding CancelCommand}"
                        Style="{StaticResource Style.BlotterToolbarButton}"
                        Padding="16,6"
                        Margin="0,0,8,0"
                        MinWidth="80"/>

                <!-- Save -->
                <Button Grid.Column="3"
                        Content="{Binding SaveButtonText}"
                        Command="{Binding SaveCommand}"
                        IsEnabled="{Binding CanSave}"
                        Padding="16,6"
                        MinWidth="100">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource Style.BlotterToolbarButton}">
                            <Setter Property="Background" Value="#1A2DD4BF"/>
                            <Setter Property="BorderBrush" Value="#2DD4BF"/>
                            <Setter Property="Foreground" Value="#2DD4BF"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#332DD4BF"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Opacity" Value="0.4"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>