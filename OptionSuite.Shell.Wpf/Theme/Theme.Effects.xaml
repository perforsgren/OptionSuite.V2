<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Soft panel shadow (HTML: 0 16px 40px rgba(0,0,0,.35)) -->
    <DropShadowEffect x:Key="Effect.ShadowPanel"
                      BlurRadius="30"
                      ShadowDepth="10"
                      Opacity="0.35"
                      Color="#000000"/>

    <DropShadowEffect x:Key="Effect.ShadowRail"
                  BlurRadius="10"
                  ShadowDepth="0"
                  Opacity="0.14"/>

</ResourceDictionary>
