<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- =======================
         TOKENS (matchar HTML)
         ======================= -->

    <!-- Base colors -->
    <Color x:Key="Color.Bg">#0B1220</Color>
    <Color x:Key="Color.Panel">#0F1B31</Color>
    <Color x:Key="Color.Panel2">#0C162A</Color>

    <!-- Transparent (för gradients) -->
    <Color x:Key="Color.Transparent">#00000000</Color>

    <!-- Borders (HTML: rgba(255,255,255,.10) / .06) -->
    <Color x:Key="Color.Border">#1AFFFFFF</Color>
    <Color x:Key="Color.BorderSoft">#0FFFFFFF</Color>

    <!-- Text -->
    <Color x:Key="Color.Text">#D6DEEE</Color>
    <Color x:Key="Color.TextMuted">#B3E7EEFC</Color>
    <Color x:Key="Color.TextMuted2">#8CE7EEFC</Color>

    <!-- Accent -->
    <Color x:Key="Color.Accent">#6AA7FF</Color>
    <Color x:Key="Color.AccentSoft">#2E6AA7FF</Color>

    <!-- “Good” (framtida badges/status) -->
    <Color x:Key="Color.Good">#2DD4BF</Color>

    <!-- Glow tokens (HTML: rgba(106,167,255,.18) och rgba(45,212,191,.14)) -->
    <Color x:Key="Color.Glow.Accent">#2E6AA7FF</Color>
    <!-- ~18% -->
    <Color x:Key="Color.Glow.Good">#242DD4BF</Color>
    <!-- ~14% -->

    <!-- Surface states (samlar alla tidigare ad-hoc hex) -->
    <Color x:Key="Color.Surface.Hover">#152746</Color>
    <Color x:Key="Color.Surface.Pressed">#1C345E</Color>
    <Color x:Key="Color.Surface.Pressed2">#23406F</Color>
    <Color x:Key="Color.Surface.Selected">#112443</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="Brush.Bg" Color="{StaticResource Color.Bg}" />
    <SolidColorBrush x:Key="Brush.Panel" Color="{StaticResource Color.Panel}" />
    <SolidColorBrush x:Key="Brush.Panel2" Color="{StaticResource Color.Panel2}" />

    <SolidColorBrush x:Key="Brush.Border" Color="{StaticResource Color.Border}" />
    <SolidColorBrush x:Key="Brush.BorderSoft" Color="{StaticResource Color.BorderSoft}" />

    <SolidColorBrush x:Key="Brush.Text" Color="{StaticResource Color.Text}" />
    <SolidColorBrush x:Key="Brush.TextMuted" Color="{StaticResource Color.TextMuted}" />
    <SolidColorBrush x:Key="Brush.TextMuted2" Color="{StaticResource Color.TextMuted2}" />

    <SolidColorBrush x:Key="Brush.Accent" Color="{StaticResource Color.Accent}" />
    <SolidColorBrush x:Key="Brush.AccentSoft" Color="{StaticResource Color.AccentSoft}" />

    <SolidColorBrush x:Key="Brush.Good" Color="{StaticResource Color.Good}" />

    <SolidColorBrush x:Key="Brush.Surface.Hover" Color="{StaticResource Color.Surface.Hover}" />
    <SolidColorBrush x:Key="Brush.Surface.Pressed" Color="{StaticResource Color.Surface.Pressed}" />
    <SolidColorBrush x:Key="Brush.Surface.Pressed2" Color="{StaticResource Color.Surface.Pressed2}" />
    <SolidColorBrush x:Key="Brush.Surface.Selected" Color="{StaticResource Color.Surface.Selected}" />

    <!-- Radii -->
    <CornerRadius x:Key="Radius.Panel">14</CornerRadius>
    <CornerRadius x:Key="Radius.Card">14</CornerRadius>
    <CornerRadius x:Key="Radius.Button">10</CornerRadius>
    <CornerRadius x:Key="Radius.WinButton">6</CornerRadius>

    <!-- Spacing -->
    <Thickness x:Key="CardPadding">12</Thickness>
    <Thickness x:Key="Thickness.WindowPadding">16</Thickness>

    <!-- Shell spacing -->
    <Thickness x:Key="Spacing.Card">12</Thickness>

    <!-- Fonts -->
    <FontFamily x:Key="Font.Sans">Segoe UI</FontFamily>
    <FontFamily x:Key="Font.Mono">Consolas</FontFamily>

    <!-- Window chrome -->
    <CornerRadius x:Key="Radius.WindowChrome">14</CornerRadius>
    <Thickness x:Key="Thickness.ResizeBorder">6</Thickness>

    <!-- Chrome overlay opacity -->
    <sys:Double x:Key="Opacity.Chrome.Title">0.80</sys:Double>
    <sys:Double x:Key="Opacity.Chrome.Rail">0.80</sys:Double>

</ResourceDictionary>
