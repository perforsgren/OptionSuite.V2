<Window x:Class="OptionSuite.Shell.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:OptionSuite.Shell.Wpf.Views"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        Title="FX.OptionSuite"
        Width="1500"
        Height="900"
        WindowStyle="None"
        ResizeMode="CanResize"
        Background="{StaticResource Brush.Bg}"
        SnapsToDevicePixels="True">

    <!-- Explicit chrome: bort med oönskad topprand + behåll resize -->
    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome
            CaptionHeight="0"
            CornerRadius="{StaticResource Radius.WindowChrome}"
            GlassFrameThickness="0"
            ResizeBorderThickness="{StaticResource Thickness.ResizeBorder}"
            UseAeroCaptionButtons="False" />
    </shell:WindowChrome.WindowChrome>

    <views:ShellView/>
</Window>
