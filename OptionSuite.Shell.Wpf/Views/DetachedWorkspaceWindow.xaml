<Window x:Class="OptionSuite.Shell.Wpf.Views.DetachedWorkspaceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="1400"
        Height="900"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BgSolid}">

    <Grid>
        <Border Margin="16"
                Background="{StaticResource PanelBrush}"
                CornerRadius="10"
                BorderBrush="{StaticResource StrokeBrush}"
                BorderThickness="1">
            <ContentControl Content="{Binding ContentViewModel}" Margin="10"/>
        </Border>
    </Grid>
</Window>
