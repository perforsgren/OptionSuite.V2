<UserControl x:Class="OptionSuite.Shell.Wpf.Views.PricerRootView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <DockPanel>

        <!-- Toolbar -->
        <StackPanel DockPanel.Dock="Top"
                    Orientation="Horizontal"
                    Margin="4">
            <Button Content="New Pricer"
                    Padding="8,4"
                    Command="{Binding NewPricerCommand}" />
        </StackPanel>

        <!-- Interna pricer-tabs -->
        <TabControl ItemsSource="{Binding Pricers}">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Title}" Margin="0,0,6,0"/>
                        <Button Content="×"
                                Padding="0"
                                Width="16"
                                Height="16"
                                Command="{Binding DataContext.ClosePricerCommand,
                                                  RelativeSource={RelativeSource AncestorType=TabControl}}"
                                CommandParameter="{Binding}" />
                    </StackPanel>
                </DataTemplate>
            </TabControl.ItemTemplate>

            <TabControl.ContentTemplate>
                <DataTemplate>
                    <!-- Placeholder för framtida pricer-UI -->
                    <Border Padding="12">
                        <TextBlock FontSize="16"
                                   Text="{Binding Title}" />
                    </Border>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>

    </DockPanel>
</UserControl>
