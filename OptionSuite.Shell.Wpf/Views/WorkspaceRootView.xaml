<UserControl x:Class="OptionSuite.Shell.Wpf.Views.WorkspaceRootView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Workspace header (per modul) -->
        <ContentControl Grid.Row="0"
                        Content="{Binding HeaderViewModel}"
                        Margin="16,16,16,10" />

        <!-- Workspace content (per modul) -->
        <Border Grid.Row="1"
                Margin="16,0,16,16"
                Background="{StaticResource PanelBrush}"
                CornerRadius="10"
                BorderBrush="{StaticResource StrokeBrush}"
                BorderThickness="1">
            <ContentControl Content="{Binding ContentViewModel}" Margin="10"/>
        </Border>

    </Grid>
</UserControl>
